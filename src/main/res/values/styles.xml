<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="jogaDeNovo">
        <item name="android:background">@android:color/holo_blue_bright</item>
        <item name="android:textColor">@android:color/background_light</item>
    </style>
    <style name="botoesVelha">
        <item name="android:background">@drawable/botao_velha</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>
    <style name="botoesDefault">
        <item name="android:background">@drawable/botao_default</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="botoesJogado">
        <item name="android:background">@drawable/botao_jogado</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>
    <style name="botoesDerrotas">
        <item name="android:background">@drawable/botao_derrota</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>
    <style name="botoesCampeoes">
        <item name="android:background">@drawable/botao_campeao</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

</resources>
